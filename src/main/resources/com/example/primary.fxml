<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 30; -fx-background-color: #f0f0f0;"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ConnectionController">

   <!-- Tiêu đề -->
   <Label text="REMOTE DESKTOP CLIENT">
      <font>
         <Font name="System Bold" size="24.0"/>
      </font>
   </Label>

   <!-- Form IP và Port -->
   <GridPane hgap="10" vgap="10">
      <Label text="Địa chỉ IP Server:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="ipTextField" promptText="Ví dụ: 192.168.1.105" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

      <Label text="Port Server:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <TextField fx:id="portTextField" promptText="Mặc định: 5000" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100" />
   </GridPane>

   <!-- Nút kết nối -->
   <Button fx:id="connectButton" text="Kết Nối" style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" prefWidth="150" onAction="#connectToServer">
      <padding>
         <Insets top="10" right="20" bottom="10" left="20"/>
      </padding>
   </Button>

   <!-- Label trạng thái -->
   <Label fx:id="statusLabel" text="STATUS: Ready" textFill="BLACK" wrapText="true"/>

</VBox>
